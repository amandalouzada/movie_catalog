{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@models/*": [
        "models/*"
      ],
      "~/*": [
        "./*"
      ],
    },
  },
  "include": [
    "./src/**/*",
  ]
}